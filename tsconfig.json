{
  "compilerOptions": {
    "outDir":"build",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "es2016",
    "moduleResolution": "node",
    "allowJs":true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators":true,
    "allowSyntheticDefaultImports":true,
    "jsx":"react",
    "typeRoots": ["./typings"],  
    "sourceMap": true
  },
  "include":[
    "src/**/*"
  ]
}